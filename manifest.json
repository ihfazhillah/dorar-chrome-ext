{
  "name": "Dorar Hadith [Un Official]",
  "description": "Search takhrij hadith through dorar.net",
  "version": "0.5",
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "dorar.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "modal.js"
      ],
      "css": [
        "css/style.css"
      ],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2,
  "icons": {
    "16": "dorar.png",
    "32": "dorar.png",
    "128": "dorar.png"
  }
}